# ================================================
# ProsePolish Backend - Production Environment
# ================================================
# IMPORTANT: Copy this file to .env.production and update all values
# DO NOT commit .env.production to version control

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
CORS_ORIGIN=https://your-frontend-domain.com

# ================================================
# Database Configuration
# ================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:your_strong_password@postgres:5432/prosepolish_db

# PostgreSQL Database Credentials (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=prosepolish_db

# ================================================
# Redis Configuration
# ================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ================================================
# JWT Configuration
# ================================================
# Generate secure random strings for production
# Example: openssl rand -base64 64
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_chars_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================================
# Admin Account Configuration
# ================================================
# Default admin account created during first deployment
# CHANGE THE PASSWORD IMMEDIATELY AFTER FIRST LOGIN!
ADMIN_EMAIL=admin@prosepolish.com
ADMIN_PASSWORD=YourSecureAdminPassword123!
ADMIN_NAME=System Administrator

# ================================================
# AI Service Configuration
# ================================================
# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# AI Gateway - OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# AI Gateway Configuration
AI_GATEWAY_REQUEST_TIMEOUT=30000
AI_GATEWAY_MAX_RETRIES=2

# AI Gateway Quotas
AI_QUOTA_DAILY_LIMIT=1000
AI_QUOTA_MONTHLY_LIMIT=10000
AI_QUOTA_MONTHLY_SPEND_LIMIT=10.00
# ================================================
# Logging Configuration (Optional)
# ================================================
LOG_LEVEL=info
