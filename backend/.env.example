# Environment
NODE_ENV=development

# Server
PORT=5000
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/prosepolish_db?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_LLM_MAX=20

# Cache TTL (in seconds)
CACHE_TTL_DICTIONARY=604800
CACHE_TTL_USER=3600
CACHE_TTL_LLM=86400

# External APIs
FREE_DICTIONARY_API_URL=https://api.dictionaryapi.dev/api/v2/entries/en

# Logging
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Session
SESSION_EXPIRY=86400
